{
  "_comment": "Choose one configuration based on your hosting mode and setup preference",

  "_shell_script_mode": {
    "_comment": "Recommended approach using a shell script for easier setup and path management",
    "token-metrics": {
      "command": "/path/to/start-tm-mcp-server.sh",
      "args": []
    }
  },

  "_direct_node_mode_self_hosted": {
    "token-metrics": {
      "command": "node",
      "args": ["build/src/index.js"],
      "cwd": ".",
      "env": {
        "TOKEN_METRICS_API_KEY": "your-api-key-here"
      }
    }
  },

  "_direct_node_mode_centralized_hosting": {
    "token-metrics": {
      "command": "node",
      "args": ["build/src/index.js"],
      "cwd": ".",
      "env": {}
    }
  },

